
#include <bits/stdc++.h> 
#include<iostream>

using namespace std;

class Person {
    int age;
    string name;
    public:
    void set(string n, int a){
        age = a;
        name = n;
    }
    void get(){
        cout << "The name of the person is " << name << " and the age is " << age << "." << endl;
    }

};

int main() {

    int a;
    string n;
    cin >> n >> a;
    Person obj;
    obj.set(n,a);
    obj.get();

    return 0;
}
